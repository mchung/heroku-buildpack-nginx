#!/bin/bash
# Usage: bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

# START CONFIG

# Support end-user configured NGINX_VERSION and S3_BUCKET environment variables.
# This way, end-users can choose exactly which versions to run with. Requires
# user-env-compile.

if [ -z "$NGINX_VERSION" ]; then
  NGINX_VERSION=1.3.13
fi

if [ -z "$S3_BUCKET" ]; then
  S3_BUCKET=heroku-buildpack-nginx
fi

# END CONFIG

#
NGINX_URL="https://s3.amazonaws.com/${S3_BUCKET}/nginx-${NGINX_VERSION}-heroku.tar.gz"
#

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BUILD_DIR=$1
CACHE_DIR=$2
mkdir -p $BUILD_DIR $CACHE_DIR

# Nginx
cd ${BUILD_DIR}
if [ ! -d ./vendor/nginx ]; then
  echo "-----> Installing Nginx v${NGINX_VERSION}"
  mkdir -p ./vendor/nginx && cd ./vendor/nginx
  curl --silent --max-time 60 --location $NGINX_URL | tar xz
fi

mkdir /app/vendor/gems
gem install bundler

echo "-----> Writing start.sh script"
mkdir -p ${BUILD_DIR}/bin
cd ${BUILD_DIR}

# Startup
cat >>bin/start.sh <<EOF
#!/usr/bin/env bash

echo "Starting nginx"

bundle install --deployment
mkdir /app/tmp && chmod 777 /app/tmp
mkdir /app/log
cd public
ruby websocket.rb -S unix.socket -svd -l /app/log/websocket.log
(tail -qF -n 0 /app/log/*.log &)
nginx
EOF
chmod +x bin/start.sh

echo "-----> Done with compile"
